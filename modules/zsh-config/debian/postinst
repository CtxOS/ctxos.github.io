#!/bin/sh
set -e

if [ "$1" = "configure" ]; then
    # Ensure root has the zsh config
    if [ -f /etc/skel/.zshrc ]; then
        cp /etc/skel/.zshrc /root/.zshrc
    fi
    
    # Change root shell to zsh if available
    if [ -x /bin/zsh ]; then
        chsh -s /bin/zsh root || true
    fi
fi

#DEBHELPER#
exit 0
